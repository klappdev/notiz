/* QLABEL-STYLE-END */

/* QPUSHBUTTON-STYLE-BEGIN */
QPushButton {
	padding: 6px 12px;
	margin-bottom: 0;

	vertical-align: middle;

	border: 1px solid transparent;
	border-radius: 4px;

	font-size: 14px;
	font-weight: 400;
	text-align: center;
        white-space: nowrap; 		/* text show one line */
	
	background-image: none;

	color: #fff;
	background-color: #337ab7;
	border-color: #2e6da4;
}

QPushButton:focus {
	color: #fff;
	background-color: #286090;
	border-color: #122b40;
}

QPushButton:hover {
	color: #fff;
	background-color: #286090;
	border-color: #204d74;	
}

QPushButton:active {
	color: #fff;    
	background-color: #286090;    
	border-color: #204d74;

	background-image: none;
}

QPushButton:active:hover {
	color: #fff;
	background-color: #204d74;
	border-color: #122b40;
}

QPushButton:disabled,
QPushButton:disabled:focus,
QPushButton:disabled:hover {
	color: #cccccc;
	background-color: white;

	border-width: 2px; 
	border-style: solid;
        border-color: #cccccc;
}

QPushButton#add-button {
        min-width: 50px;
        max-width: 100px;

        color: #fff;
