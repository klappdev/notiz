/* QCHECKBOX-STYLE-START */
QCheckBox {
	padding-left: 20px; 
	position: relative;
	opacity: 0; 
	
	font-size: 14px;
	font-weight: 400;
	text-align: center;
	white-space: nowrap;
}

QCheckBox:focus {
	outline-offset: -2px; 
}

QCheckBox:disabled {
    background-color: #eeeeee;
    opacity: 0.65; 
}

QCheckBox::indicator:checked {
    font-family: 'FontAwesome';
        image: url(:res/image/checkbox/checkbox-on.png)
}

QCheckBox::indicator:unchecked {
    font-family: 'FontAwesome';
        image: url(:res/image/checkbox/checkbox-off.png)
}

