/* QCOMBOBOX-STYLE-START */
QComboBox {
        height: 15px;
        padding: 6px 12px;

        font-size: 12px;
        line-height: 1.2;
}

QComboBox QAbstractItemView {
        height: 15px;
        padding: 6px 12px;

        font-size: 12px;
        line-height: 1.2;

        border: 1px solid #ccc;
        border-radius: 4px;

        selection-color: #555;
        selection-background-color: #31b0d5;
}

QComboBox:editable {
        color: #555;
        background-color: #fff;
        background-image: none;

        border: 1px solid #ccc;
        border-radius: 4px;
}

QComboBox:editable:focus {
        border-color: #66afe9;
        outline: 0;
}

QComboBox:on {
        padding-top: 3px;
        padding-left: 4px;

        font-size: 12px;
        line-height: 1.2;

        color: #555;
        background-color: #fff;
        background-image: none;

        border: 1px solid #ccc;
        border-radius: 4px;
}

QComboBox::drop-down {
        subcontrol-origin: padding;
        subcontrol-position: top right;
        width: 30px;

        font-size: 12px;
        line-height: 1.2;

        border-left-width: 1px;
        border-left-color: darkgray;
        border-left-style: solid;
        border-top-right-radius: 3px;
        border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
        padding: 0px 1px 0px 1px;
        image: url(:res/image/arrow/arrow-down.png);
        background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 #EEEEEE, stop: 1 #FFFFFF);
}
/* QCOMBOBOX-STYLE-END */

/* QSPINBOX-STYLE-START */
QSpinBox {
