/* QTABLE-STYLE-START */
QTableView {
	background-color: #ffffff;
}	

QHeaderView::section:horizontal {
	font-weight: bold;

	vertical-align: center;

        padding-left: 1px;
        padding-right: 6px;
        padding-top: 6px;
        padding-bottom: 6px;

	border-style: none;

	border-left: 1px solid #ecedef;
   	border-right: 1px solid #b1b1b5;

        /*background-color: #fff!important;*/

        background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f4f4f6, stop:1 #ceced6);
}

QHeaderView::section:horizontal:first {
    	border-left-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f4f4f6, stop:1 #ceced6);
}

QHeaderView::section:horizontal:last {
	border-right-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f4f4f6, stop:1 #ceced6);
}

QTableView::item {
	background-color: #f9f9f9;
        padding-right: 5px;
}

QTableView::item:selected {
	background-color: #e8e8e8;
	color: black;
}

QTableView::item:hover {
	background-color: #f0f2f5;
	color: gray;
}

/* QTABLE-STYLE-END */

/* QGROUPBOX-STYLE-END */
QGroupBox {
    	border: 1px solid gray;
    	border-radius: 5px;

    	margin-top: 1ex; 
    	margin-bottom: 1ex; 

    	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #e0e0e0, stop: 1 #ffffff);
}

QGroupBox::title {
    	subcontrol-origin: margin;
    	subcontrol-position: top center; 

    	padding: 0 3px;
}

QGroupBox#operative-control-panel,
QGroupBox#legal-abonents-panel,
QGroupBox#illegal-abonents-panel,
QGroupBox#operative-support-panel {
	background-color: #ffffff;
}

QGroupBox#operative-control-panel::title,
QGroupBox#legal-abonents-panel::title,
QGroupBox#illegal-abonents-panel::title,
QGroupBox#operative-support-panel::title {
	font-style: normal;
	font-size: 14px;
	font-weight: bold;

	color: #656565;
}

/* QGROUPBOX-STYLE-END */

/* TAB-STYLE-START */
QTabWidget::pane { 
	border-top: 2px groove #C2C7CB;	
}

QTabWidget::tab-bar {
    left: 5px;
}

QTabBar::tab {    
    border-bottom-color: #C2C7CB; /* same as the pane color */
    border-top-left-radius: 2px;
    border-top-right-radius: 2px;
	
    min-width: 120px;
	max-width: 160px;
	max-height: 40px;
	
    padding: 5px;
	
    alignment: center;
    
    font-weight: bold;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #fafafa, stop: 0.4 #f4f4f4,
                                stop: 0.5 #e7e7e7, stop: 1.0 #fafafa);
}

QTabBar::tab:selected {
	background-color: #305075;
    border-color: #9B9B9B;
    border-bottom-color: #C2C7CB; /* same as pane color */	
}
/* TAB-STYLE-END */

/* QLINEEDIT-STYLE-START */
QLineEdit  {	
        height: 15px;
        padding: 6px 6px;

        font-size: 14px;
        line-height: 1.2;

        color: #555;
        background-color: #fff;
        background-image: none;
	
        border: 1px solid #ccc;
        border-radius: 4px;
}

QLineEdit:focus {
        border-color: #66afe9;
        outline: 0;
}
/* QLINEEDIT-STYLE-END */


/* QDATETIME-STYLE-START */
