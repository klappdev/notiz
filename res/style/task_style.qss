
* {
	font-style: normal;
	font-weight: bolder;
	font-size: 12px;
	font-family: 'Monaco';
}

/* QWIDGET-STYLE-BEGIN */
QWidget#main-panel {
	background-color: #edeef0;
}

/* QWIDGET-STYLE-END */

/* QLABEL-STYLE-BEGIN */
QLabel {
